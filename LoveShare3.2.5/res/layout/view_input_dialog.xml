<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="TextViewEdits,HardcodedText,ContentDescription,InefficientWeight,UseCompoundDrawables,PxUsage,UselessParent" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="新建文件夹"
                android:textColor="#444444"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lable"
            android:orientation="vertical" >
        </LinearLayout>

        <EditText
            android:id="@+id/view_input_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/acm_inputbox"
            android:ellipsize="start"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:textColor="#444444"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55999999"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/view_input_negative"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="true"
                android:text="取消"
                android:textColor="#444444"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#55999999"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/view_input_positive"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="true"
                android:text="确认"
                android:textColor="#444444"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>